{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Nuxt Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Nuxt Server Side",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev", "--inspect"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Launch Chrome for Client Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/app",
      "sourceMaps": true,
      "userDataDir": false
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/app",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Nuxt (Full Stack)",
      "configurations": [
        "Debug Nuxt Server Side",
        "Launch Chrome for Client Debug"
      ]
    }
  ]
}
